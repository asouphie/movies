<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/detail_picture"
                android:layout_width="match_parent"
                android:layout_height="166sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="0.03"
                android:paddingRight="8dp"
                app:srcCompat="@android:color/transparent" />

            <TextView
                android:id="@+id/detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/detail_picture"
                android:layout_weight="0.03"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/detail_years"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/detail_title"
                android:layout_weight="0.03"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/detail_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/detail_years"
                android:layout_weight="0.03"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="italic" />

            <RatingBar
                android:id="@+id/detail_popularite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_categories"
                android:layout_centerHorizontal="true"
                android:clickable="false"
                android:isIndicator="true"
                android:soundEffectsEnabled="false" />

            <TextView
                android:id="@+id/detail_resume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/detail_popularite"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="15sp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>